<div class="container">
  <div class="row">
    <div class="card-panel">
      <form action="/plan/itinerary/create" method="POST">
        <div class="row">
          <div class="input-field col s12 m3 offset-m3">
            <i class="material-icons prefix">payment</i>
            <input id="authBudget" class="validate" type="number" name="budget" placeholder="E.g 4000">
            <label for="authBudget" class="active">Budget</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m6 offset-m3">
            <i class="material-icons prefix">filter</i>
            <input id="authCountry" class="validate" type="text" name="country" placeholder="E.g Russia, London">
            <label for="authCountry" class="active">Country/City</label>
          </div>
          <!-- <div class="input-field col s12 m3">
            <input id="authCity" class="validate" type="text" name="city" placeholder="City">
            <label for="authCity" class="active"></label>
          </div> -->
        </div>
        <div class="row">
          <button class="cyan darken-4 waves-effect waves-light btn col s6 offset-m3" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
