<div class="container center-align">
  <div id="headtitle">
    <h1>TravelList</h1>
  </div>
  <div class="row box1">
    <div class="col s12 m8 offset-m2">
      <div class="card white">
        <form action="/auth/signup" method="POST">
          <div class="row">
            <div class="input-field col s8 offset-s2 m6 offset-m3" style="margin-top: 2rem;">
              <label for="authName" class="active" data-error="wrong"></label>
              <input id="authName" class="form-control" type="text" name="username" placeholder="Username">
            </div>
          </div>
          <div class="row">
            <div class="input-field col offset-s2 s8 m6 offset-m3" style="margin-top: 0;">
              <label for="authEmail" class="active" data-error="wrong"></label>
              <input id="authEmail" class="form-control" type="email" name="email" placeholder="Email">
            </div>
          </div>
          <div class="row">
            <div class="input-field col s8 offset-s2 m6 offset-m3" style="margin-top: 0;">
              <label for="authPassword" class="active" data-error="wrong" data-success="right"></label>
              <input id="authPassword" class="form-control" type="password" name="password" placeholder="Password">
            </div>
          </div>
          <div class="row">
            <button class="cyan darken-4 waves-effect waves-light btn col s6 m6 offset-m3" type="submit">Submit</button>
          </div>
        </form>
        <div class="row center-align prompt">
          <a href="/auth/login">Existing User? Log In Now</a>
        </div>
      </div>
    </div>
  </div>
</div>
